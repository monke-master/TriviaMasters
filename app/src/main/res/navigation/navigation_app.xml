<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_app"
    app:startDestination="@id/startScreenFragment">

    <fragment
        android:id="@+id/ownGameFragment"
        android:name="com.monke.triviamasters.ui.ownGameFeature.OwnGameFragment"
        android:label="fragment_own_game"
        tools:layout="@layout/fragment_own_game" />
    <action
        android:id="@+id/action_descriptionFragment_to_ownGameFragment"
        app:destination="@id/ownGameFragment" />
    <action
        android:id="@+id/action_descriptionFragment_to_searchCategoryFragment"
        app:destination="@id/searchCategoryFragment" />
    <action
        android:id="@+id/action_descriptionFragment_to_questionFragment"
        app:destination="@id/questionFragment" />
    <fragment
        android:id="@+id/questionFragment"
        android:name="com.monke.triviamasters.ui.questionFeature.QuestionFragment"
        android:label="fragment_question"
        tools:layout="@layout/fragment_question" />
    <fragment
        android:id="@+id/descriptionFragment"
        android:name="com.monke.triviamasters.ui.questionFeature.DescriptionFragment"
        android:label="fragment_description"
        tools:layout="@layout/fragment_description">
        <action
            android:id="@+id/action_descriptionFragment_to_searchCategoryFragment"
            app:destination="@id/searchCategoryFragment"

            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_descriptionFragment_to_ownGameFragment"
            app:destination="@id/ownGameFragment"

            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_descriptionFragment_to_questionFragment"
            app:destination="@id/questionFragment"

            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment
        android:id="@+id/searchCategoryFragment"
        android:name="com.monke.triviamasters.ui.searchCategoryFeature.SearchCategoryFragment"
        android:label="fragment_search_category"
        tools:layout="@layout/fragment_search_category" />
    <fragment
        android:id="@+id/startScreenFragment"
        android:name="com.monke.triviamasters.ui.startFeature.StartScreenFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startScreenFragment_to_emailFragment"
            app:destination="@id/emailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_startScreenFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_startScreenFragment_to_createPlayerFragment"
            app:destination="@id/createPlayerFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/emailFragment"
        android:name="com.monke.triviamasters.ui.signUpFeature.EmailFragment"
        android:label="fragment_email"
        tools:layout="@layout/fragment_email" >
        <action
            android:id="@+id/action_emailFragment_to_passwordFragment"
            app:destination="@id/passwordFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />
    </fragment>

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.monke.triviamasters.ui.signIn.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_mainFragment"
            app:destination="@id/mainFragment"

            app:popUpTo="@id/startScreenFragment"
            app:popUpToInclusive="true"

            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/createPlayerFragment"
        android:name="com.monke.triviamasters.ui.createPlayerFeature.CreatePlayerFragment"
        android:label="fragment_create_player"
        tools:layout="@layout/fragment_create_player" >
        <action
            android:id="@+id/action_createPlayerFragment_to_mainFragment"
            app:destination="@id/mainFragment"

            app:popUpTo="@id/startScreenFragment"
            app:popUpToInclusive="true"

            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/passwordFragment"
        android:name="com.monke.triviamasters.ui.signUpFeature.PasswordFragment"
        android:label="fragment_password"
        tools:layout="@layout/fragment_password" >
        <action
            android:id="@+id/action_passwordFragment_to_createPlayerFragment"
            app:destination="@id/createPlayerFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.monke.triviamasters.ui.mainScreenFeature.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_descriptionFragment"
            app:destination="@id/descriptionFragment"

            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
</navigation>