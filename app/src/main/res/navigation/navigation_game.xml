<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_game"
    app:startDestination="@id/descriptionFragment">

    <fragment
        android:id="@+id/descriptionFragment"
        android:name="com.monke.triviamasters.ui.gameFeature.descriptionFeature.ModeDescriptionFragment"
        tools:layout="@layout/fragment_mode_description"
        android:label="fragment_description">
        <action
            android:id="@+id/action_descriptionFragment_to_searchCategoryFragment"
            app:destination="@id/searchCategoryFragment"

            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_descriptionFragment_to_ownGameFragment"
            app:destination="@id/ownGameFragment"

            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_descriptionFragment_to_questionFragment"
            app:destination="@id/questionFragment"

            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/ownGameFragment"
        android:name="com.monke.triviamasters.ui.gameFeature.ownGameFeature.OwnGameFragment"
        tools:layout="@layout/fragment_own_game"
        android:label="fragment_own_game" />
    <fragment
        android:id="@+id/questionFragment"
        android:name="com.monke.triviamasters.ui.questionFeature.QuestionFragment"
        tools:layout="@layout/fragment_question"
        android:label="fragment_question" />
    <fragment
        android:id="@+id/searchCategoryFragment"
        android:name="com.monke.triviamasters.ui.gameFeature.searchCategoryFeature.SearchCategoryFragment"
        tools:layout="@layout/fragment_search_category"
        android:label="fragment_search_category" />
</navigation>